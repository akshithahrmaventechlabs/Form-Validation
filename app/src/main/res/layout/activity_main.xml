<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/pic3"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="FORM DETAILS"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FirstName:"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/FirstName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#5676"
            android:hint=" Enter FirstName"
            android:layout_marginLeft="3dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LastName:"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/LastName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#5676"
            android:hint=" Enter LastName"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#B71C1C"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />
        <EditText
            android:id="@+id/Email"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#5676"
            android:hint=" Enter Email"
            android:layout_marginLeft="44dp"
            android:inputType="textEmailAddress"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB:"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />
        <EditText
            android:id="@+id/DOB"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#5676"
            android:hint=" Enter DOB"
            android:layout_marginLeft="54dp"
            android:inputType="date" />


    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/Gender"/>
        <RadioButton
            android:id="@+id/Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:gravity="center"
            android:textSize="19dp"
            android:textStyle="bold"/>
        <RadioButton
            android:id="@+id/Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:gravity="center"
            android:textSize="19dp"
            android:textStyle="bold"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BuildingNo:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />
        <EditText
            android:id="@+id/buildingNo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#5676"
            android:hint=" Enter buildingNo"
            android:layout_marginLeft="5dp"
            android:inputType="number" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="5.39dp" />
        <EditText
            android:id="@+id/Street"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#5676"
            android:hint=" Enter Street"
            android:layout_marginLeft="43dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />
        <EditText
            android:id="@+id/City"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#5676"
            android:hint=" Enter City"
            android:layout_marginLeft="61dp"
             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />
        <EditText
            android:id="@+id/State"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#5676"
            android:hint=" Enter State"
            android:layout_marginLeft="51dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PinCode:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />
        <EditText
            android:id="@+id/PinCode"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#5676"
            android:hint=" Enter PinCode"
            android:layout_marginLeft="26dp"
            android:inputType="number" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ContactNo:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />
        <EditText
            android:id="@+id/ContactNo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#5676"
            android:hint=" Enter ContactNo"
            android:layout_marginLeft="8dp"
            android:inputType="number" />

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textStyle="bold"
            android:text="Skills"
            android:layout_marginRight="53dp"
            android:layout_marginLeft="5dp"/>
        <CheckBox
            android:id="@+id/HTML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTML"
            android:textSize="19dp"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/CSS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSS"
            android:textSize="19dp"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/JS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JS"
            android:textSize="19dp"
            android:textStyle="bold"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="#F5FBF6"
        android:layout_marginTop="10dp"/>

</LinearLayout>

<!--    app:helperText="@string/required"-->
